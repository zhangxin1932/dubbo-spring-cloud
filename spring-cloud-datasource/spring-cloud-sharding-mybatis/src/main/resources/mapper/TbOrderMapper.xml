<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zy.sharding.mybatis.mapper.TbOrderMapper">

    <resultMap id="orderResultMap" type="com.zy.sharding.mybatis.entity.TbOrder">
        <id column="id" property="id"/>
        <result column="order_name" property="orderName"/>
    </resultMap>

    <select id="selectOrders" resultMap="orderResultMap">
        select id, order_name
        from tb_order;
    </select>

    <select id="selectOrderById" resultMap="orderResultMap">
        select id, order_name
        from tb_order
        where id=#{id};
    </select>

    <insert id="insert">
        insert into tb_order
        (id, order_name)
        values (#{id}, #{orderName});
    </insert>
</mapper>